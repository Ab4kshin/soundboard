<Window x:Class="soundboard.Views.SoundEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактор" Height="250" Width="300"
        WindowStartupLocation="CenterOwner"
        Background="#2D2D30" ResizeMode="NoResize">

    <StackPanel Margin="20">
        <TextBlock Text="Название:" Foreground="White" Margin="0,0,0,5"/>
        <TextBox x:Name="NameBox" Padding="5" Margin="0,0,0,15"/>

        <TextBlock Text="Горячая клавиша:" Foreground="White" Margin="0,0,0,5"/>
        <Button x:Name="HotkeyBtn" Content="Нажми для назначения" 
                Click="HotkeyBtn_Click"
                Background="#3E3E42" Foreground="White" Padding="10" Margin="0,0,0,20"/>

        <Button Content="Сохранить" Click="Save_Click" Background="#007ACC" Foreground="White" Padding="10"/>
    </StackPanel>
</Window>